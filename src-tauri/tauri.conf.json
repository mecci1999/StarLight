{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "StarLight",
  "version": "0.1.0",
  "identifier": "com.starlight.pc",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://127.0.0.1:6130",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "category": "MicroserviceSystemMonitoring",
    "copyright": "StarLight",
    "licenseFile": "./copyright/License.txt",
    "resources": [
      "tray"
    ],
    "createUpdaterArtifacts": true,
    "active": true,
    "icon": [],
    "windows": {},
    "macOS": {}
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": null,
      "capabilities": ["default-capability", "mobile-capability", "desktop-capability"]
    },
    "macOSPrivateApi": true
  },
  "plugins": {
    "updater": {
      "active": false
    }
  }
}
